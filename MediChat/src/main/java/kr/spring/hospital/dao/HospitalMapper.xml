<mapper namespace="kr.spring.hospital.dao.HospitalMapper">
	<!-- insertHospital -->
	<insert id="insertHospital" parameterType="hospitalVO">
		INSERT INTO hospital VALUES (
									  #{hos_num},
									  #{hos_addr},
									  #{hos_div},
									  #{hos_divName},
									  #{hos_emcls},
									  #{hos_emclsName},
									  #{hos_eryn},
									  #{hos_etc},
									  #{hos_mapImg},
									  #{hos_name},
									  #{hos_tell1},
									  #{hos_tell3},
									  #{hos_time1C},
									  #{hos_time2C},
									  #{hos_time3C},
									  #{hos_time4C},
									  #{hos_time5C},
									  #{hos_time6C},
									  #{hos_time7C},
									  #{hos_time8C},
									  #{hos_time1S},
									  #{hos_time2S},
									  #{hos_time3S},
									  #{hos_time4S},
									  #{hos_time5S},
									  #{hos_time6S},
									  #{hos_time7S},
									  #{hos_time8S},
									  #{hos_hpId},
									  #{hos_postCdn1},
									  #{hos_postCdn2},
									  #{hos_info},
									  #{hos_lon},
									  #{hos_lat},
									  #{hos_x},
									  #{hos_y},
									  #{hos_weekendAt}
									  )
	</insert>
	
	<sql id="searchHospitalByKeyword">
		<where>
			<if test="keyword!=null and keyword!=''">
				hos_addr LIKE '%' || #{keyword} || '%' OR
				hos_name LIKE '%' || #{keyword} || '%' OR
				hos_info LIKE '%' || #{keyword} || '%'
			</if>
		</where>
	</sql>
	<sql id="searchHospitalBySortType">
		<if test="sortType=='NEAR'">
			ORDER BY 
		</if>
		<if test="sortType=='REVIEW'">
			ORDER BY 
		</if>
		<if test="sortType=='SCORE'">
			ORDER BY hos_score
		</if>
	</sql>
	
	<select id="selectListHospital" parameterType="map" resultType="hospitalVO">
		SELECT * FROM HOSPITAL
	</select>
	
	<select id="selectListCntHospital" parameterType="map" resultType="integer">
		SELECT COUNT(*) FROM HOSPITAL
	</select>
	

</mapper>